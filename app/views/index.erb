<div id="header">
  <h1>Holler Back, Young'n</h1>
  <form action="/signin" method="post">
    <input type="text" name="user[:user_handle]" placeholder="User Handle">
    <input type="password" name="user[:password]" placeholder="Password">
    <input type="submit" value="Submit"/>
  </form>

  <p>New User? Register here...</p>
  <form action="/signup" method="post">
    <input type="text" name="user[:name]" placeholder="Enter Name here">
    <input type="text" name="user[:user_name]" placeholder="User Name">
    <input type="text" name="user[:email]" placeholder="Email">
    <input type="password" name="user[:password]" placeholder="Password">
    <input type="submit" value="Create Account"/>

  </form>
</div>
