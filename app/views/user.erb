<div id="nav">
  <p><%=@user.full_name%><br>
  <p><a href="/user/<%=@user.user_handle%>"><%=@user.user_handle%></a></p>
  <p><a href="/follow/<%=@user.user_handle%>">Follow</a></p></p>
  <p>Followers: <%=@user.follows.where( follower_id: @user.id).count%></p>
  <p>Following: <%=@user.follows.where( followed_id: @user.id).count%></p>
</div>

<nav>
</div>



<div id="feed">
  <!-- <div id="holler"> -->

    <%@user.hollers.reverse_each do |holler|%>
  <ul class="holler_content">
    <li class="handle"><a href="/user/<%=@user.user_handle%>"><%=holler.user.user_handle%></a></li>
    <li class="time"><%=holler.created_at.strftime("%B %d, %Y, %l:%M")%>
    </li>
    <li class="content"><br/><%=holler.content.upcase%></li>
    <li class=" rehol reholler">Reholler</li><br>
  </ul>
<%end%>
</div>

<form action="/holler" method="post">
    <textarea class="textarea" name="tweet" placeholder="Add holler here"></textarea>
    <input class = "submit holer" type="submit" value="Holler">
</form>
</div>
