<div id="nav">
  <p><a href="/user/<%=@user.id%>"><%=@user.full_name%></a><br>
  <p><%=@user.user_handle%></p><br>

  <p>Followers: <%=@user.follows.where( follower_id: @user.id).count%></p><br>
  <p>Following: <%=@user.follows.where( followed_id: @user.id).count%></p><br>
</div>

<nav>
</div>



<div id="feed">
  <!-- <div id="holler"> -->

    <%@hollers.reverse_each do |holler|%>
  <ul class="holler_content">
    <li class="handle"><a href=""><%=holler.user.user_handle%></a></li>
    <li class="time"><%=holler.created_at.strftime("%B %d, %Y, %l:%M")%></li>
    <li class="content"><br/><%=holler.content%></li>
    <li class="reholler">Reholler</li><br>
  </ul>
<%end%>
</div>

<form action="/holler" method="post">
    <textarea class="textarea" name="tweet" placeholder="Add tweet message here"></textarea>
    <input class = "submit holer" type="submit" value="Holler">
</form>
</div>
